<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_car_list_item"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_recycler_item_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/car_item_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:src="@color/can_auction_green" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/car_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BLOG TITLE CAR TITLE BLOG TITLE BLOG TITLE BLOG TITLE BLOG TITLE BLOG TITLE BLOG TITLE "
                    android:textColor="@color/can_auction_green"
                    android:maxLines="2"
                    android:maxEms="20"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_margin="1dp"/>

            </LinearLayout>




        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
